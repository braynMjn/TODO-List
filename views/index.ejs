<html>

<head>
    <title> ToDo App </title>
    <link href="/style.css" rel="stylesheet">
</head>

<body>
    <div class="container">
        <span id="s1">
            <h1> T<span id="s2">O</span>D<span id="s3">O</span> LIST</h1>
        </span>

        <form action="/addtask" method="POST">

            <input type="text" name="newtask" placeholder="add new task" required><br>
            <br>
            <button type="submit"> Add Task </button>
        </form>

        <h2> Added Task </h2>

        <form action="/removetask" method="POST">

            <% for( var i = 0; i < task.length; i++){ %>
            <li class="list_items"><input type="checkbox" name="check" value="<%= task[i] %>" /> <%= task[i] %> </li>
            <% } %>
            <br>
       
            <button type="submit" id="top"> Remove </button>
        </form>

        <h2> Completed Task </h2>

        <% for(var i = 0; i < complete.length; i++){ %>
        <li class="list_items"><input type="checkbox" checked><%= complete[i] %> </li>
        <% } %>

    </div>

</body>

</html>